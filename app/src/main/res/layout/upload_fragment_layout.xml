<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/light_blue">

    <TextView
        android:id="@+id/subject_prompt_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:text="SUBJECT"
        />

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/subject_prompt_textview"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/subject_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:hint="SUBJECT"

        />

    <TextView
        android:id="@+id/add_textview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subject_prompt_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ADD YOUR NOTE BELOW"
        android:background="@color/light_blue"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/note_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_textview"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        tools:hint = "GGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGG"
        android:gravity="top"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".70" />

    <ImageView
        android:id="@+id/upload_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_addnote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:scaleType="fitCenter"
        android:layout_margin="16dp"
        android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>